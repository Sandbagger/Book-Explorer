<%= form_with(model: books_upload, class: "contents") do |form| %>
  <% if books_upload.errors.any? %>
   <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(books_upload.errors.count, "error") %> prohibited this books_upload from being saved:</h2>

      <ul>
        <% books_upload.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

    <div class="my-5">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

    <div class="my-5">
    <%= form.label :attachment_data %>
     <%= form.hidden_field :string, value: books_upload.cached_attachment_data %>
     <%= form.file_field :attachment, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", data: { single_upload_target: "input" } %>
  </div>

    <div class="my-5">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>